<Window x:Class="TextEngineEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="515.032" Width="1022.31">
    <Grid>
        <!--<Button Command="{Binding ChangeHPCommand}" />-->
        <ListBox Margin="50,50,562,50" ItemsSource="{Binding SceneNodes}" SelectedItem="{Binding SelectedItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding value}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Text="{Binding SelectedItem.value}" />
    </Grid>
</Window>
